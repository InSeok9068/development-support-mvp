{
  "name": "@apps/kjca",
  "type": "module",
  "scripts": {
    "test": "vitest --run --environment jsdom",
    "test:ui": "vitest --ui",
    "dev": "vite",
    "build": "vue-tsc && vite build --emptyOutDir",
    "preview": "vite preview",
    "typegen": "pocketbase-typegen -j ./pb_schema.json -o ./src/api/pocketbase-types.ts",
    "lint": "eslint \"src/**/*.{js,ts,vue}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,vue,css,html}\" --fix",
    "lint:format": "prettier --write .",
    "pb:dev": "pnpm exec dotenv -e ../../.env -- cmd /d /c \"cd /d %USERPROFILE%\\IdeaProjects\\pocketbase\\kjca && .\\pbw.exe pocketbase serve --dev\"",
    "pb:hook": "cmd /d /c \"robocopy .\\pb_hooks %USERPROFILE%\\IdeaProjects\\pocketbase\\kjca\\pb_hooks /MIR >NUL & if errorlevel 8 exit /b 1 & exit /b 0\""
  },
  "dependencies": {
    "@packages": "workspace:*"
  }
}
